<!DOCTYPE html>
<html>
  <head>
    <title>ChefBook</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class='container'>
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, class: name %>
      <% end %>
      <% if current_user %>
      <span>You are logged as <%= current_user.fullname %>| <%= link_to "logout", session_path(1), method: :delete, data: {confirm: 'Are you sure?'} %> </span>
      <% end %>
    
      <%= yield %>
    </div>
  </body>
</html>
